<h1>Books</h1>

<h2>New book</h2>

<% @books.each do |book| %>

<div class ="table">
  <th>Title</th>
  <span><%= book.title %></span>
  
  <th>Body</th>
  <span><%= book.body %></span>
  
  <%=link_to"Show","book_path(book.id)" %>

</div>

<% end %>

<%= form_with model: @book,url: '/books',method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit "Create Book" %>
<% end %>
